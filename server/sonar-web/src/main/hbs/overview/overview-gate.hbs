<div class="overview-card-header page-header">
  <h2 class="page-title">Quality Gate</h2>
  {{#if gateName}}
    <div class="page-actions">
      <a class="badge badge-muted" href="#">{{gateName}}</a>
    </div>
  {{/if}}
</div>

{{#eq gateStatus 'ERROR'}}
  <div class="alert alert-danger">
    <i class="icon-alert-error"></i>&nbsp;{{t 'widget.alerts.errors'}}
  </div>
{{/eq}}
{{#eq gateStatus 'WARN'}}
  <div class="alert alert-warning">
    <i class="icon-alert-warn"></i>&nbsp;{{t 'widget.alerts.warnings'}}
  </div>
{{/eq}}
{{#eq gateStatus 'OK'}}
  <div class="alert alert-success">
    <i class="icon-alert-ok"></i>&nbsp;{{t 'widget.alerts.no_alert'}}
  </div>
{{/eq}}

{{#notEmpty gateConditions}}
  <ul class="list-inline spacer-top">
    {{#each gateConditions}}
      <li>
        <span class="big alert_{{level}}">{{actualValue}}</span>
        <span>{{operator}} {{thresholdValue}}</span>
        <p class="note text-lowercase" style="padding-top: 4px;">{{metric}}</p>
        <p class="note">{{period}}</p>
      </li>
    {{/each}}
  </ul>
{{/notEmpty}}
